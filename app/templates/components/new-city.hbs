{{#if addNewCity}}
    <h1>New City</h1>
  <div>
      <form  {{action 'submit' on='submit'}}>
          <div class="form-group">
              <label for="name">Name</label>
            {{input value=name id="name" class="form-control"}}
          </div>
          <div class="form-group">
              <label for="attractions">Attractions</label>
            {{input value=attractions id="attractions" class="form-control"}}
          </div>

          <div class="form-group">
              <label for="Country">Country</label>
            {{input value=country id="country" class="form-control"}}
          </div>
          <button class="btn btn-primary"  type="submit">Save</button>
      </form>
  </div>
  {{else}}
    <button {{action 'cityFormShow'}} class="btn btn-primary">New City</button>
{{/if}}
